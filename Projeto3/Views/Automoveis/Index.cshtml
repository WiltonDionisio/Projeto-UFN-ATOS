@model IEnumerable<Projeto3.Models.Automoveis>
   

@{
    ViewData["title"] = "Automoveis";
}
<h2>@ViewData["tile"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo Cadastro</a>

</p>

<table class="table table-striped table-hover">

    <thead>
        <tr class="success" >
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorAluguel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locadora)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorAluguel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locadora)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Exibir" asp-route-id="@item.Id">Exibir</a>
                <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>

            </td>
        </tr>
        }
    </tbody>


</table>